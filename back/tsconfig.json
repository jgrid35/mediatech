{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "NodeNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules/**/*.ts"
  ]
}